{
  "name": "desa",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "next": "16.0.0",
      "zod": "^4.1.12",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5",
      "drizzle-orm": "^0.44.2"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "build:web": "turbo -F web build",
    "start:web": "turbo -F web start",
    "db:push": "turbo -F @desa/db db:push",
    "db:studio": "turbo -F @desa/db db:studio",
    "db:generate": "turbo -F @desa/db db:generate",
    "db:generate:auth": "bunx @better-auth/cli@latest generate --output ./packages/db/src/schema/auth.ts --config ./packages/auth/src/index.ts",
    "db:migrate": "turbo -F @desa/db db:migrate",
    "db:start": "turbo -F @desa/db db:start",
    "db:watch": "turbo -F @desa/db db:watch",
    "db:stop": "turbo -F @desa/db db:stop",
    "db:down": "turbo -F @desa/db db:down",
    "db:down:v": "turbo -F @desa/db db:down:v",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.20"
}
